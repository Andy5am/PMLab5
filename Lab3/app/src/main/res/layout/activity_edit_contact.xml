<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditContactActivity">

    <EditText
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nameEdit"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="58dp"
            android:layout_marginStart="58dp"
            android:hint="Nombre" android:layout_marginTop="58dp" app:layout_constraintTop_toBottomOf="@+id/idEdit"/>
    <EditText
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/phoneEdit" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/nameEdit" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="58dp" android:layout_marginStart="58dp" android:hint="Telefono"/>
    <EditText
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/mailEdit" android:layout_marginTop="55dp"
            app:layout_constraintTop_toBottomOf="@+id/phoneEdit" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="58dp" android:layout_marginStart="58dp" android:hint="Correo"/>
    <Button
            android:text="Regresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backButton" android:layout_marginTop="109dp"
            app:layout_constraintTop_toBottomOf="@+id/mailEdit" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="55dp" android:layout_marginStart="55dp"/>
    <Button
            android:text="Guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveButton" android:layout_marginTop="109dp"
            app:layout_constraintTop_toBottomOf="@+id/mailEdit" android:layout_marginLeft="75dp"
            android:layout_marginStart="75dp" app:layout_constraintStart_toEndOf="@+id/backButton"/>
    <EditText
            android:layout_width="248dp"
            android:layout_height="58dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/idEdit" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="119dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="58dp" android:layout_marginStart="58dp" android:hint="id"/>
</android.support.constraint.ConstraintLayout>